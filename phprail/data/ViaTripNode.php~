<?php

class ViaTripNode {

	  private $platform;
    private $time;

    function __construct($platform, $time)
    {
        $this->platform = $platform;
        $this->time = $time;
    }

    function getPlatform()
    {
        return $this->platform;
    }

    function getTime()
    {
        return $this->time;
    }

}

?>